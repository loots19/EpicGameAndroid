<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENUE DANS EPIC GAME"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_margin="90dp"
        android:layout_marginStart="150dp"
        android:padding="10dp"/>



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-62dp"
        android:layout_marginStart="155dp"
        app:srcCompat="@drawable/ic_1762562_3f51b5" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text=" jeu de combat épique pour deux joueurs. \n\nVous avez le choix entre trois personnages : Mage, Rôdeur et Guerrier. \n\nChacun de ces personnage possède deux attaques : une attaque basique et une attaque spéciale.\n\nQuand un joueur n’a plus de point de vie, la partie est terminée et l’autre joueur l’emporte."
    />

    <Button
        android:id="@+id/button_Lets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Let's go" />


</LinearLayout>